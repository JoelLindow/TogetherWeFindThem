<h1>Together We Find Them</h1>
<% if current_user  %>
  <div class="greeting_root_block">
    <h3>Welcome, <%= "#{current_user.first_name} #{current_user.last_name}" %></h3>
  </div>
  <div class="missing_persons_root_block">
    <%= link_to "Continue as #{current_user.first_name} #{current_user.last_name}", '/dashboard' %>
  </div>

  <div class="logout_link">
    <%= link_to "Logout", logout_path %>
  </div>

<% else %>

  <div class="login_create_root_block">
    <%= link_to "Sign in with Google", "/auth/google" %>
    <%= link_to "Continue as unregistered user", '/dashboard' %>
  </div>
<% end %>

<div class="visit_blog_root_block">
  Visit the Blog  --- This will become a link
</div>